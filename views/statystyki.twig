<div class="container">
    <div class="row justify-content-center mt-2">
        <!-- Kolumna odpowiedzialna za statystyki gracza. -->
        <div class="col-md-3 tlo-divow">
            <h2>Statystyki</h2>
            <div class="row">
                <div class="col-12">
                    <img src="{{ player.avatar }}" alt="Portret gracza" class="portrait">
                </div>
            </div>
            <p>Nick: {{ player.userName }}</p>
            <p>ID: {{ player.userId }}</p>
            <p>Poziom: {{ player.userLevel }}</p>
            <p>Doświadczenie:  {{ player.exp }} / {{ player.limitExp }}</p>
            <p>Ranga: {{ player.rank }}</p>
            <p>Siła: {{ player.userStr }}</p>
            <p>Wytrzymałość: {{ player.userResi }}</p>
            <p>Inteligencja: {{ player.userInt }}</p>
            <p>Zdrowie: {{ player.userHp }} / {{ player.userMaxHp }}</p>
        </div>
        <div class="col-md-6 tlo-divow m-2">
            <div class="opis-postaci">Opis postaci <br>
                {{ player.userDescription | raw }}
            </div>
        </div>
    </div>
</div>

</body>
</html>
